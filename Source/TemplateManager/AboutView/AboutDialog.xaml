<Window x:Class="TemplateManager.AboutView.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SizeToContent="WidthAndHeight"
    MinHeight="200" MinWidth="250"
    Title="{Binding Title}" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="5" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.ColumnSpan="3">
            <Image Source="Images/AboutTitleImage.png" Stretch="None" />
            <TextBlock Text="{Binding ProductAndVersion}" />
            <TextBlock Text="{Binding AssemblyCopyright}" />
            <TextBlock />
            <TextBlock Text="Credits:" />
            <ItemsControl ItemsSource="{Binding Credits}" />
        </StackPanel>

        <Button 
            Margin="0,10,0,0"
            Grid.Row="1" Grid.Column="1"
            Command="{Binding CloseWindowCommand}" 
            CommandParameter="{Binding View}" 
            Content="_OK" 
            IsDefault="True" />
    </Grid>
</Window>
