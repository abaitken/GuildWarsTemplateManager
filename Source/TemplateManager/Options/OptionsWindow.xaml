<Window x:Class="TemplateManager.Options.OptionsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CommandModel="clr-namespace:TemplateManager.Common.CommandModel;assembly=TemplateManager.Common"
    Title="{Binding WindowTitle}" SizeToContent="WidthAndHeight" MinHeight="250" MinWidth="450">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            
            <TextBlock Text="Skill templates folders:" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding TemplateFolder}" />
                <Button Grid.Column="1" 
                            Content="..." 
                            Command="{Binding OpenFolderDialogCommand.Command}" 
                            CommandParameter="{Binding TemplateFolderDialogHelper}"
                            CommandModel:CreateCommandBinding.Command="{Binding OpenFolderDialogCommand}" />
            </Grid>

            <TextBlock Text="What will 'delete' do?" />
            <ComboBox SelectedItem="{Binding DeleteBehaviour}" ItemsSource="{Binding AvailableDeleteBehaviours}" />

            <TextBlock Text="Archive folder:" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding ArchiveFolder}" />
                <Button Grid.Column="1" 
                            Content="..." 
                            Command="{Binding OpenFolderDialogCommand.Command}" 
                            CommandParameter="{Binding ArchiveFolderDialogHelper}"
                            CommandModel:CreateCommandBinding.Command="{Binding OpenFolderDialogCommand}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Theme:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" SelectedItem="{Binding SelectedTheme}" ItemsSource="{Binding AvailableThemes}" />
            </Grid>

        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <UniformGrid Grid.Column="1" Columns="3" Rows="1">
                <Button Command="{Binding UseDefaultsCommand.Command}" 
                            CommandParameter="{Binding View}"
                            CommandModel:CreateCommandBinding.Command="{Binding UseDefaultsCommand}">Restore _Defaults</Button>

                <Button IsDefault="True" 
                            Command="{Binding CloseWindowSuccessCommand.Command}" 
                            CommandParameter="{Binding View}" 
                            CommandModel:CreateCommandBinding.Command="{Binding CloseWindowSuccessCommand}">_OK</Button>

                <Button IsCancel="True" 
                            Command="{Binding CloseWindowCommand.Command}" 
                            CommandParameter="{Binding View}" 
                            CommandModel:CreateCommandBinding.Command="{Binding CloseWindowCommand}">_Cancel</Button>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
